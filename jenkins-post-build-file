pipeline {
    agent any
    environment {
     place_name = 'MAHARASHTRA'   
    }

    stages {
        stage('staged variables') {
            input {
                message "should I continue or abort here"
                ok "yes we can"
            }
            steps {
                sh '''
                echo "This is user defined global variable ${place_name}"
                '''
            }
        }
    }
   
    post { 
        changed { 
            echo 'job is changed'
        }
    }
}
